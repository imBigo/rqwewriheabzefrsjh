{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Transform": "AWS::LanguageExtensions",
    "Description": "CloudFormation template pour creer l'infrastructure reseau pour les environnements test et production",
    "Metadata": {
        "AWS::CloudFormation::Interface": {
            "ParameterGroups": [
                {
                    "Label": {
                        "default": "Informations du projet"
                    },
                    "Parameters": [
                        "ProjectName",
                        "EnvironmentType"
                    ]
                },
                {
                    "Label": {
                        "default": "Configuration de deploiement"
                    },
                    "Parameters": [
                        "NatInstanceTemplateURL"
                    ]
                },
                {
                    "Label": {
                        "default": "Configuration du reseau"
                    },
                    "Parameters": [
                        "VpcCIDR",
                        "InstanceBits",
                        "AvailabilityZone1",
                        "AvailabilityZone2"
                    ]
                }
            ],
            "ParameterLabels": {
                "ProjectName": {
                    "default": "Nom du projet"
                },
                "EnvironmentType": {
                    "default": "Type d'environnement"
                },
                "NatInstanceTemplateURL": {
                    "default": "URL du template NAT instance"
                },
                "VpcCIDR": {
                    "default": "Plage CIDR du VPC"
                },
                "InstanceBits": {
                    "default": "Nombre de bits pour identifier les instances"
                },
                "AvailabilityZone1": {
                    "default": "Premiere zone de disponibilite"
                },
                "AvailabilityZone2": {
                    "default": "Seconde zone de disponibilite (Production uniquement)"
                }
            }
        }
    },
    "Parameters": {
        "ProjectName": {
            "Type": "String",
            "Description": "Nom du projet (ex: pub100genies, cafe)",
            "MinLength": 3,
            "MaxLength": 100,
            "AllowedPattern": "[a-zA-Z0-9]*",
            "ConstraintDescription": "Doit contenir entre 3 et 100 caracteres alphanumeriques"
        },
        "EnvironmentType": {
            "Type": "String",
            "Description": "Type d'environnement a deployer",
            "Default": "Test",
            "AllowedValues": [
                "Test",
                "Prod"
            ],
            "ConstraintDescription": "Doit etre Test ou Prod"
        },
        "NatInstanceTemplateURL": {
            "Type": "String",
            "Description": "URL du template NAT instance (S3 ou HTTPS)",
            "Default": "https://lab2-fichiers.s3.us-east-1.amazonaws.com/NatInstance.json",
            "ConstraintDescription": "Doit etre une URL valide pour un template CloudFormation"
        },
        "VpcCIDR": {
            "Type": "String",
            "Description": "Plage CIDR pour le VPC (ex: 10.0.0.0/16)",
            "Default": "10.0.0.0/16",
            "AllowedPattern": "^(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])(\\/(1[6-9]|2[0-8]))$",
            "ConstraintDescription": "Doit etre un CIDR valide au format x.x.x.x/x"
        },
        "InstanceBits": {
            "Type": "Number",
            "Description": "Nombre de bits pour identifier les instances dans les sous-reseaux",
            "Default": "8",
            "MinValue": 4,
            "MaxValue": 16,
            "ConstraintDescription": "Doit etre une valeur entre 4 et 16"
        },
        "AvailabilityZone1": {
            "Type": "AWS::EC2::AvailabilityZone::Name",
            "Description": "Premiere zone de disponibilite",
            "Default": "us-east-1a"
        },
        "AvailabilityZone2": {
            "Type": "AWS::EC2::AvailabilityZone::Name",
            "Description": "Seconde zone de disponibilite (utilisee uniquement pour l'environnement Production)",
            "Default": "us-west-1a"
        }
    },
    "Conditions": {
        "IsProd": {
            "Fn::Equals": [
                {
                    "Ref": "EnvironmentType"
                },
                "Prod"
            ]
        }
    },
    "Resources": {
        "VPC": {
            "Type": "AWS::EC2::VPC",
            "Properties": {
                "CidrBlock": {
                    "Ref": "VpcCIDR"
                },
                "EnableDnsSupport": true,
                "EnableDnsHostnames": true,
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "${ProjectName}-${EnvironmentType}-VPC"
                        }
                    },
                    {
                        "Key": "Project",
                        "Value": {
                            "Ref": "ProjectName"
                        }
                    },
                    {
                        "Key": "Environment",
                        "Value": {
                            "Ref": "EnvironmentType"
                        }
                    },
                    {
                        "Key": "Stack",
                        "Value": {
                            "Ref": "AWS::StackName"
                        }
                    }
                ]
            }
        },
        "InternetGateway": {
            "Type": "AWS::EC2::InternetGateway",
            "Properties": {
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "${ProjectName}-${EnvironmentType}-IGW"
                        }
                    },
                    {
                        "Key": "Project",
                        "Value": {
                            "Ref": "ProjectName"
                        }
                    },
                    {
                        "Key": "Environment",
                        "Value": {
                            "Ref": "EnvironmentType"
                        }
                    },
                    {
                        "Key": "Stack",
                        "Value": {
                            "Ref": "AWS::StackName"
                        }
                    }
                ]
            }
        },
        "GatewayAttachment": {
            "Type": "AWS::EC2::VPCGatewayAttachment",
            "Properties": {
                "VpcId": {
                    "Ref": "VPC"
                },
                "InternetGatewayId": {
                    "Ref": "InternetGateway"
                }
            }
        },
        "PublicSubnet1": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "VpcId": {
                    "Ref": "VPC"
                },
                "CidrBlock": {
                    "Fn::Select": [
                        0,
                        {
                            "Fn::Cidr": [
                                {
                                    "Ref": "VpcCIDR"
                                },
                                4,
                                {
                                    "Ref": "InstanceBits"
                                }
                            ]
                        }
                    ]
                },
                "AvailabilityZone": {
                    "Ref": "AvailabilityZone1"
                },
                "MapPublicIpOnLaunch": true,
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "${ProjectName}-${EnvironmentType}-PublicSubnet1"
                        }
                    },
                    {
                        "Key": "Project",
                        "Value": {
                            "Ref": "ProjectName"
                        }
                    },
                    {
                        "Key": "Environment",
                        "Value": {
                            "Ref": "EnvironmentType"
                        }
                    },
                    {
                        "Key": "Stack",
                        "Value": {
                            "Ref": "AWS::StackName"
                        }
                    }
                ]
            }
        },
        "PrivateSubnet1": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "VpcId": {
                    "Ref": "VPC"
                },
                "CidrBlock": {
                    "Fn::Select": [
                        1,
                        {
                            "Fn::Cidr": [
                                {
                                    "Ref": "VpcCIDR"
                                },
                                4,
                                {
                                    "Ref": "InstanceBits"
                                }
                            ]
                        }
                    ]
                },
                "AvailabilityZone": {
                    "Ref": "AvailabilityZone1"
                },
                "MapPublicIpOnLaunch": false,
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "${ProjectName}-${EnvironmentType}-PrivateSubnet1"
                        }
                    },
                    {
                        "Key": "Project",
                        "Value": {
                            "Ref": "ProjectName"
                        }
                    },
                    {
                        "Key": "Environment",
                        "Value": {
                            "Ref": "EnvironmentType"
                        }
                    },
                    {
                        "Key": "Stack",
                        "Value": {
                            "Ref": "AWS::StackName"
                        }
                    }
                ]
            }
        },
        "PublicSubnet2": {
            "Type": "AWS::EC2::Subnet",
            "Condition": "IsProd",
            "Properties": {
                "VpcId": {
                    "Ref": "VPC"
                },
                "CidrBlock": {
                    "Fn::Select": [
                        2,
                        {
                            "Fn::Cidr": [
                                {
                                    "Ref": "VpcCIDR"
                                },
                                4,
                                {
                                    "Ref": "InstanceBits"
                                }
                            ]
                        }
                    ]
                },
                "AvailabilityZone": {
                    "Ref": "AvailabilityZone2"
                },
                "MapPublicIpOnLaunch": true,
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "${ProjectName}-${EnvironmentType}-PublicSubnet2"
                        }
                    },
                    {
                        "Key": "Project",
                        "Value": {
                            "Ref": "ProjectName"
                        }
                    },
                    {
                        "Key": "Environment",
                        "Value": {
                            "Ref": "EnvironmentType"
                        }
                    },
                    {
                        "Key": "Stack",
                        "Value": {
                            "Ref": "AWS::StackName"
                        }
                    }
                ]
            }
        },
        "PrivateSubnet2": {
            "Type": "AWS::EC2::Subnet",
            "Condition": "IsProd",
            "Properties": {
                "VpcId": {
                    "Ref": "VPC"
                },
                "CidrBlock": {
                    "Fn::Select": [
                        3,
                        {
                            "Fn::Cidr": [
                                {
                                    "Ref": "VpcCIDR"
                                },
                                4,
                                {
                                    "Ref": "InstanceBits"
                                }
                            ]
                        }
                    ]
                },
                "AvailabilityZone": {
                    "Ref": "AvailabilityZone2"
                },
                "MapPublicIpOnLaunch": false,
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "${ProjectName}-${EnvironmentType}-PrivateSubnet2"
                        }
                    },
                    {
                        "Key": "Project",
                        "Value": {
                            "Ref": "ProjectName"
                        }
                    },
                    {
                        "Key": "Environment",
                        "Value": {
                            "Ref": "EnvironmentType"
                        }
                    },
                    {
                        "Key": "Stack",
                        "Value": {
                            "Ref": "AWS::StackName"
                        }
                    }
                ]
            }
        },
        "PublicRouteTable": {
            "Type": "AWS::EC2::RouteTable",
            "Properties": {
                "VpcId": {
                    "Ref": "VPC"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "${ProjectName}-${EnvironmentType}-PublicRT"
                        }
                    },
                    {
                        "Key": "Project",
                        "Value": {
                            "Ref": "ProjectName"
                        }
                    },
                    {
                        "Key": "Environment",
                        "Value": {
                            "Ref": "EnvironmentType"
                        }
                    },
                    {
                        "Key": "Stack",
                        "Value": {
                            "Ref": "AWS::StackName"
                        }
                    }
                ]
            }
        },
        "PublicRoute": {
            "Type": "AWS::EC2::Route",
            "DependsOn": "GatewayAttachment",
            "Properties": {
                "RouteTableId": {
                    "Ref": "PublicRouteTable"
                },
                "DestinationCidrBlock": "0.0.0.0/0",
                "GatewayId": {
                    "Ref": "InternetGateway"
                }
            }
        },
        "PublicSubnet1RouteTableAssociation": {
            "Type": "AWS::EC2::SubnetRouteTableAssociation",
            "Properties": {
                "SubnetId": {
                    "Ref": "PublicSubnet1"
                },
                "RouteTableId": {
                    "Ref": "PublicRouteTable"
                }
            }
        },
        "PublicSubnet2RouteTableAssociation": {
            "Type": "AWS::EC2::SubnetRouteTableAssociation",
            "Condition": "IsProd",
            "Properties": {
                "SubnetId": {
                    "Ref": "PublicSubnet2"
                },
                "RouteTableId": {
                    "Ref": "PublicRouteTable"
                }
            }
        },
        "JumpBoxSecurityGroup": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "Security Group pour la JumpBox",
                "VpcId": {
                    "Ref": "VPC"
                },
                "SecurityGroupIngress": [
                    {
                        "IpProtocol": "tcp",
                        "FromPort": "22",
                        "ToPort": "22",
                        "CidrIp": "0.0.0.0/0",
                        "Description": "SSH depuis Internet"
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "${ProjectName}-${EnvironmentType}-JumpBox-SG"
                        }
                    },
                    {
                        "Key": "Project",
                        "Value": {
                            "Ref": "ProjectName"
                        }
                    },
                    {
                        "Key": "Environment",
                        "Value": {
                            "Ref": "EnvironmentType"
                        }
                    },
                    {
                        "Key": "Stack",
                        "Value": {
                            "Ref": "AWS::StackName"
                        }
                    }
                ]
            }
        },
        "NatInstance": {
            "Type": "AWS::CloudFormation::Stack",
            "DependsOn": "GatewayAttachment",
            "Properties": {
                "TemplateURL": {
                    "Ref": "NatInstanceTemplateURL"
                },
                "Parameters": {
                    "VpcId": {
                        "Ref": "VPC"
                    },
                    "PublicSubnetId": {
                        "Ref": "PublicSubnet1"
                    },
                    "PrivatesSubnetsID": {
                        "Fn::If": [
                            "IsProd",
                            {
                                "Fn::Join": [
                                    ",",
                                    [
                                        {
                                            "Ref": "PrivateSubnet1"
                                        },
                                        {
                                            "Ref": "PrivateSubnet2"
                                        }
                                    ]
                                ]
                            },
                            {
                                "Ref": "PrivateSubnet1"
                            }
                        ]
                    },
                    "KeyPairName": "vockey",
                    "AMIId": "/aws/service/ami-amazon-linux-latest/al2023-ami-kernel-default-x86_64"
                }
            }
        }
    },
    "Outputs": {
        "VpcId": {
            "Description": "ID du VPC",
            "Value": {
                "Ref": "VPC"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-VpcId"
                }
            }
        },
        "PublicSubnet1Id": {
            "Description": "ID du sous-reseau public 1",
            "Value": {
                "Ref": "PublicSubnet1"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-PublicSubnet1Id"
                }
            }
        },
        "PrivateSubnet1Id": {
            "Description": "ID du sous-reseau prive 1",
            "Value": {
                "Ref": "PrivateSubnet1"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-PrivateSubnet1Id"
                }
            }
        },
        "PublicSubnet2Id": {
            "Description": "ID du sous-reseau public 2 (Production uniquement)",
            "Condition": "IsProd",
            "Value": {
                "Ref": "PublicSubnet2"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-PublicSubnet2Id"
                }
            }
        },
        "PrivateSubnet2Id": {
            "Description": "ID du sous-reseau prive 2 (Production uniquement)",
            "Condition": "IsProd",
            "Value": {
                "Ref": "PrivateSubnet2"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-PrivateSubnet2Id"
                }
            }
        },
        "JumpBoxSecurityGroupId": {
            "Description": "ID du groupe de securite pour la JumpBox",
            "Value": {
                "Ref": "JumpBoxSecurityGroup"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-JumpBoxSG"
                }
            }
        },
        "EnvironmentType": {
            "Description": "Type d'environnement",
            "Value": {
                "Ref": "EnvironmentType"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-EnvType"
                }
            }
        },
        "ProjectName": {
            "Description": "Nom du projet",
            "Value": {
                "Ref": "ProjectName"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-ProjectName"
                }
            }
        },
        "NatInstancePrivateIp": {
            "Description": "IP privee de l'instance NAT",
            "Value": {
                "Fn::GetAtt": [
                    "NatInstance",
                    "Outputs.NatInstancePrivateIp"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-NatInstancePrivateIp"
                }
            }
        },
        "NatInstancePublicIp": {
            "Description": "IP publique de l'instance NAT",
            "Value": {
                "Fn::GetAtt": [
                    "NatInstance",
                    "Outputs.NatInstancePublicIp"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-NatInstancePublicIp"
                }
            }
        },
        "NumberOfAZs": {
            "Description": "Nombre de zones de disponibilite utilisees",
            "Value": {
                "Fn::If": [
                    "IsProd",
                    "2",
                    "1"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-NumberOfAZs"
                }
            }
        }
    }
}