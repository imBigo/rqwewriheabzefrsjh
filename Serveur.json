										"Fn::Sub": "bd.${DNSPrefix}team1.gti778.ets.bimweb.net"
									},
									"DBPort": {
										"Fn::If": [
											"IsProdEnvironment",
											"3306",
											"3360"
										]
									},
									"DBUser": {
										"Ref": "DBUsername"
									},
									"DBPass": {
										"Ref": "DBPassword"
},
									"Domain": {
										"Fn::Sub": "www.${DNSPrefix}team1.gti778.ets.bimweb.net"
									}
								}
							]
						}
					},
					"BlockDeviceMappings": [
						{
							"DeviceName": "/dev/xvda",
