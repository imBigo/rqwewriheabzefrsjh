								"VolumeSize": {
									"Fn::If": [
										"IsProdEnvironment",
										"8",
										"8"
									]
								},
								"VolumeType": "gp2",
								"DeleteOnTermination": true
							}
						}
					],
					"TagSpecifications": [
						{
							"ResourceType": "instance",
							"Tags": [
								{
									"Key": "Name",
									"Value": {
										"Fn::Sub": "${NetworkStackName}-API"
									}
								},
								{
									"Key": "Stack",
									"Value": {
										"Ref": "AWS::StackName"
									}
								},  
								{
									"Key": "Environment",
									"Value": {
										"Fn::ImportValue": {
											"Fn::Sub": "${NetworkStackName}-EnvType"
										}
									}
								},
								{
									"Key": "Project",
									"Value": {
										"Fn::ImportValue": {
											"Fn::Sub": "${NetworkStackName}-ProjectName"
										}
									}
								},
								{
									"Key": "Layer",
									"Value": "api"
								}
							]
						}
					]
				}
			}
		},
