						"Ref": "LatestAmiId"
					},
					"InstanceType": {
						"Fn::If": [
							"IsProdEnvironment",
							"t2.large",
							"t2.small"
						]
					},
					"KeyName": {
						"Ref": "SSHKeyName"
					},
					"IamInstanceProfile": {
						"Name": "LabInstanceProfile"
					},
					"SecurityGroupIds": [
